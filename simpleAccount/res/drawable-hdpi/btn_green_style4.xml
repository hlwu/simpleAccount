<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#FFefcf" android:startColor="#F8d0a9" />

            <stroke android:width="1dip" android:color="#FAa4e7" />

            <corners android:radius="16dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#F6EBba" android:startColor="#FcFFFA" />

            <stroke android:width="1dip" android:color="#F6EBa7" />

            <corners android:radius="16dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>