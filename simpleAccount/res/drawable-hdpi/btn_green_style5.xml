<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#F8d0a9" android:startColor="#FFefcf" />

            <stroke android:width="1dip" android:color="#FF7F50" />

            <corners android:radius="12dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#DEB887" android:startColor="#DEB887" />

            <stroke android:width="1dip" android:color="#FF7F50" />

            <corners android:radius="10dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>